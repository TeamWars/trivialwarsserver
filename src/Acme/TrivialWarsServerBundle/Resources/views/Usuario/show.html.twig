{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Usuario</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ entity.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Partidasganadas</th>
                <td>{{ entity.partidasGanadas }}</td>
            </tr>
            <tr>
                <th>Partidasjugadas</th>
                <td>{{ entity.partidasJugadas }}</td>
            </tr>
            <tr>
                <th>Partidasperdidas</th>
                <td>{{ entity.partidasPerdidas }}</td>
            </tr>
            <tr>
                <th>Rol</th>
                <td>{{ entity.rol }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('user_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
